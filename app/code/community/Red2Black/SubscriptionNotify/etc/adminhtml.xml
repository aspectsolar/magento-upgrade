<config>
    <translate>
        <modules>
            <Red2Black_SubscriptionNotify>
                <files>
                    <default>Red2Black_SubscriptionNotify.csv</default>
                </files>
            </Red2Black_SubscriptionNotify>
        </modules>
    </translate>
    
    <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <newsletter>
                                        <children>
                                            <subscriptionnotify translate="title" module="subscriptionnotify">
                                            <title>Subscription Notifications</title>
                                            </subscriptionnotify>
                                        </children>
                                    </newsletter>
                                </children>
                            </config>
                        </children>
                    </system>
                    <newsletter>
                        <children>
                            <subscriptionnotify translate="title" module="subscriptionnotify">
                                <title>Subscription Notifications</title>
                                <sort_order>999</sort_order>
                            </subscriptionnotify>
                        </children>
                    </newsletter>
               </children>
           </admin>
       </resources>
    </acl>
</config>
