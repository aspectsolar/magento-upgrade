<config>
    <sections>
        <newsletter>
            <groups>
                <subscriptionnotify translate="label">
                    <label>Subscription Notification Options</label>
                    <expanded>0</expanded>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <email_notification_on_subscribe translate="label comment">
                            <label>Email Admin on Subscribe</label>
                            <comment>Do you want an email notification when you get a subscriber?</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_notification_on_subscribe>
                        <notification_email_template translate="label">
                            <label>Subscription Notification Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notification_email_template>
                        <notification_email_sender translate="label">
                            <label>Notification Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notification_email_sender>
                        <notification_email_recipient translate="label comment">
                            <label>Notification Email Recipient</label>
                            <comment>What email address should the notifications go to?</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-email</validate>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notification_email_recipient>
                    </fields>
                </subscriptionnotify>
            </groups>
        </newsletter>
    </sections>
</config>
