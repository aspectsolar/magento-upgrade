<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php if($_product->isSaleable()): ?>
    <div class="add-to-cart">
		
        <?php if(!$_product->isGrouped()): ?>
		<div class="quantity">
			<label for="qty"><?php echo $this->__('Qty:') ?></label>
			<input type="number" name="qty" id="qty" maxlength="2" size="2" value="<?php if ( $this->getMinimalQty($_product) > "1" ) { echo $this->getMinimalQty($_product);} else { echo "1";} ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
		
		</div>
        <?php endif; ?>
        <a title="<?php echo $buttonTitle ?>" class="linkbutton buyitnow btn-cart" onclick="productAddToCartForm.submit(this)"><span><?php echo $buttonTitle ?></span></a>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
<?php endif; ?>
